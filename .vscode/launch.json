  "version": "0.2.0",
  "configurations": [
    {
      "preLaunchTask": "ngrok",
      "name": "WowGanizer",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],

      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "type": "node"
    }
  ]
}
